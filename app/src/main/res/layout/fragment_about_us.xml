<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AboutUs"
    android:background="@drawable/rounded_t_khaki">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="326dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="218dp"
                android:layout_height="101dp"
                android:text="Meet Jallhara."
                android:textSize="42dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/imageView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.917"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingConstraints" />


            <androidx.cardview.widget.CardView
                android:id="@+id/imageView4"
                android:layout_width="154dp"
                android:layout_height="75dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.916"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                android:padding="2dp"
                android:layout_margin="0dp"
                android:foreground="@drawable/rounded_border_image_about"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/about4" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="72dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.908"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.531"
                android:padding="2dp"
                android:layout_margin="0dp"
                android:foreground="@drawable/rounded_border_image_about"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/about3"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/imageView1"
                android:layout_width="115dp"
                android:layout_height="124dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView2"
                app:layout_constraintEnd_toStartOf="@+id/textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardBackgroundColor="#2C252D"
                android:padding="2dp"
                android:layout_margin="0dp"
                android:foreground="@drawable/rounded_border_image_about"
                tools:ignore="MissingConstraints,NotSibling">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/about1"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/imageView2"
                android:layout_width="161dp"
                android:layout_height="123dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.060"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.921"
                android:padding="2dp"
                android:layout_margin="0dp"
                android:foreground="@drawable/rounded_border_image_about"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/about2"/>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#2C252D"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="80dp"
            android:paddingTop="0dp"
            android:paddingBottom="10dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:text="What Makes Us Special Agency?"
            android:maxLines="2"
            android:textAlignment="center"
            android:gravity="bottom"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:textSize="12dp"
            android:text="The event ticketing company has special features that differentiate it from conventional ticket providers. These features help the event ticketing company provide the best service to their customers and ensure that every attended event runs smoothly and successfully."
            android:gravity="center"/>

        <View
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#2A2C252D"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/easypayment"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Easy Payment"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:gravity="center"
                android:text="The event ticketing company provides various easy and secure payment methods, such as credit cards, bank transfers, e-wallets, and payment through their partner outlets. The event ticketing company provides various easy and secure payment methods, such as credit cards, bank transfers, e-wallets, and payment through their partner outlets. "/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ticketdelivery"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Ticket Delivery"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:gravity="center"
                android:text="The event ticketing company provides the option of delivering tickets directly to the customer's address, so customers do not have to bother picking up tickets at the ticket sales location."/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/onlinebooking"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Online Booking System"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:gravity="center"
                android:text="The event ticketing company provides an easy-to-use online ticket booking system that can be accessed from anywhere.The event ticketing company provides an easy-to-use online ticket booking system that can be accessed from anywhere."/>
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:orientation="vertical"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="4dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/customerservice"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Customer Service"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:gravity="center"
            android:text="The event ticketing company provides responsive and trained customer service to help customers solve any issues or questions they may have. This service is available by phone, email, or live chat and can help customers quickly and effectively."/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pembatassegitiga"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="80dp"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="Our Team"
        android:maxLines="2"
        android:textAlignment="center"
        android:gravity="bottom"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:foreground="@drawable/rounded_border_image_about">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/glenys"/>
                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Chrystalia Glenys Winata Ang"
                    android:textAlignment="center"
                    android:textSize="14dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:foreground="@drawable/rounded_border_image_about">

                <ImageView
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/daniel"/>
                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Daniel Zerge Wijaya"
                    android:textAlignment="center"
                    android:textSize="14dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:foreground="@drawable/rounded_border_image_about">


                    <ImageView
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/nadya"/>
                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Nadya Clarine Purba"
                    android:textAlignment="center"
                    android:textSize="14dp"/>


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>





</ScrollView>